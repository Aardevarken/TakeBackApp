<h1>New Project</h1>

<div class="row">
  <div class="span6 offset3 center" >
    <% if signed_in? %>
      <%= form_for :project, url: projects_path do |f| %>
        <p>
          <%= f.label :title %><br>
          <%= f.text_field :title %>
        </p>
     
        <p>
         <%= f.label :location %><br>
          <%= f.text_field :location %>
        </p>

       <p>
          <%= f.label :description %><br>
          <%= f.text_area :description %>
        </p>
     
        <p>
          <%= f.submit %>
        </p>
    <% end %>

  <% else %>
    <h3> Sign in or sign up to create a new project! </h3>

  <% end %>
  </div>
</div>

