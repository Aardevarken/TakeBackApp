<% provide(:title, "sign in") %>
<h1>Sign in</h1>

<div class="row">
  <div class="span6 offset3" style= "text-offset:center">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "sign in", class: "btn btn-large btn-primary" %>
    <% end %>
    <br>
    <p style="text-align:center">new user? <b><%= link_to "sign up", signup_path %></b></p>
  </div>
</div>